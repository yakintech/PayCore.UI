@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<PayCore.UI.Models.Dto.EmployeeListDto>


<h1>Employees</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Address</th>
            <th>City</th>
            <th>Add Date</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.AddDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>



